{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Mermaid Watch",
        "type": "shell",
        "command": "mmdc",
        "args": [
          "-i", "${file}",               // Input file (file bạn đang mở)
          "-o", "${fileDirname}/${fileBasenameNoExtension}.svg", // Output vào folder assets
          "-w",                          // Watch mode (Tự động biên dịch khi save)
          "-b", "transparent"            // Nền trong suốt
        ],
        "group": "build",
        "presentation": {
          "reveal": "silent",
          "panel": "dedicated"
        },
        "problemMatcher": []
      }
    ]
}
